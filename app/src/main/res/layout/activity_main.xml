<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E1EFF8"
    android:id="@+id/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_name"
        android:textSize="24sp"
        android:textColor="#088BE8"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/num_quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/num_quest"
        android:textColor="#050C8E"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_quest"
        android:textSize="16sp"
        android:textColor="#050C8E"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/text_quest"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/var_answers">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вар1"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вар2"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_margin="10dp"
            android:padding="10dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вар3"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вар4"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_margin="10dp"
            android:padding="10dp"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:backgroundTint="#CADEF1"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:onClick="sendAnswer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/n"
            android:textSize="16sp"
            android:textColor="#050C8E"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/progress_test"

            />
    </LinearLayout>
</LinearLayout>